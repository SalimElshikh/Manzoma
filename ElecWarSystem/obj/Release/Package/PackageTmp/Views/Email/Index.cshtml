<link rel="stylesheet" href="~/Content/aside.css" />
<link href="~/Content/tabadol-file.css" rel="stylesheet" />
<div ng-app="EmailModule">
    <div class="container mt-4 mb-4 d-flex flex-column" ng-controller="EmailController" ng-cloak>
        <div class="header-file d-flex flex-row flex-wrap justify-content-between">
                <button type="submit" ng-class="exportClasses" id="exportBtn" ng-click="loadExportedEmails(true)"class="export-btn" >
                    صادر
                    <span class="glyphicon glyphicon-export"></span>
                </button>

                <button type="submit" ng-class="importClasses" id="importBtn" ng-click="loadExportedEmails(false)" class="export-btn">
                    وارد
                    <span class="glyphicon glyphicon-import"></span>
                    <span class="badge" style="background-color: red; color: white;" ng-show="{{unreadCount > 0}}">{{unreadCount}}</span>
                </button>

            
            @{ 
                long perc = (ViewBag.Used.SpaceInBytes * 100) / (ViewBag.Capacity.SpaceInBytes);
                string color = (perc > 80) ? "progress-bar-danger" : "progress-bar-primary";
            }
            <div class="div-progress" >
                <div class="progress" style="margin:10px 0px 0px 0px; height:10px; width: 5rem">
                    <div class="progress-bar @color" role="progressbar" aria-valuenow="@perc" aria-valuemin="0" aria-valuemax="100" style="width:@perc">
                        <span class="sr-only">80% Complete (danger)</span>
                    </div>
                </div>
                <label style="float:left;">@String.Format($"{ViewBag.Capacity.ToString()} Max")</label>
                <label style="float:right;">@String.Format($"{ViewBag.Used.ToString()} Used")</label>
            </div>
            <a class=" export-btn create-btn" id="createBtn" href="@Url.Action("Create", "Email")" >
                    إنشاء بريد
                    <span class="glyphicon glyphicon-pencil"></span>
            </a>

        </div>
        <div ng-show="!export">
            <div class=" container mt-4 p-3 header-item" id="emailsListHeader">
                    <div class="">
                        هام
                    </div>
                    <div class="">
                        المرسل
                    </div>
                    <div class="">
                        الموضوع
                    </div>
                    <div class="">
                        الوقت
                    </div>
            </div>

            <div id="EmailsDiv">
                <div class="container mt-2 p-3 email-item" ng-repeat="email in Recieved track by $index">
                    <div class = "row" ng-class ="email.Maqroo2 ? 'row' : 'row email-unread'">
                        <div class="">
                            <input type="checkbox" ng-model="email.Starred" ng-click="StarEmail(email.Email.ID)" />
                        </div>
                        <div class="" ng-click="openDetailsEmail(email.Email.ID)">
                            <span class="aribiano">{{email.Email.Sender.We7daName}}</span>
                        </div>
                        <div class="" ng-click="openDetailsEmail(email.Email.ID)">
                            <span class="aribiano">{{email.Email.Subject}}</span>
                            <span>-</span>
                            <span class="aribiano">{{email.Email.EmailText}}</span>
                        </div>
                        <div class="" ng-click="openDetailsEmail(email.Email.ID)" ng-cloak>
                            <span>{{email.Email.SendDateTime.slice(6,-2) | date:'yyyy/MM/dd'}}</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="" ng-show="export">
            <div class="container p-3 d-flex flex-row header-item" id="emailsListHeader">  
                <div class="col-3">
                    الوقت
                </div>
                <div class="col-9">
                    الموضوع
                </div>
            </div>

            <div id="EmailsDiv " class="header-export">
                <div class="container mt-2 p-3 email-item d-flex flex-row " style="position: relative;" ng-repeat="email in Sended track by $index">
                    <div class="col-2" ng-click="openDetailsEmail(email.ID)">
                        <span>{{email.SendDateTime.slice(6,-2) | date:'yyyy/MM/dd'}}</span>
                    </div>
                    <div class="col-1 me-5" style="margin-right: -20px;">
                        <button class="delete-btn col-2" ng-click="delete(email.ID)">
                            حذف
                            <span class="glyphicon glyphicon-trash"></span>
                        </button>
                    </div>
                    <div class="col-9" ng-click="openDetailsEmail(email.ID)">
                        <span class="aribiano">{{email.Subject}}</span>
                        <span class="aribiano">{{email.EmailText}}</span>
                    </div>



                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript" src="~/Scripts/EmailsScript.js"></script>