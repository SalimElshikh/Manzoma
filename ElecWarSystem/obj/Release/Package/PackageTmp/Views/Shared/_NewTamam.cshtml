@using ElecWarSystem.Models
<link href="~/Content/KharegTmarkoz.css" rel="stylesheet" />
<script src="~/Scripts/jquery-3.7.1.min.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
@{
    Layout = "~/Views/Shared/_layout.cshtml";
    UserRoles userRoles = (ElecWarSystem.Models.UserRoles)byte.Parse(Request.Cookies["Roles"].Value);
}

<link rel="stylesheet" href="~/Content/tmamGathering.css" />
<link rel="stylesheet" href="~/Content/second-layout.css" />
<link rel="stylesheet" href="~/Content/aside.css" />
<script src="~/Scripts/TmamScripts/tmam-gathering-helper.js"></script>
<div class="container d-flex flex-column">
    @{DateTime todayDate = DateTime.Today.AddDays(1);}

    @if ((userRoles & UserRoles.Viewer) == UserRoles.Viewer &&
        (userRoles & UserRoles.Admin) != UserRoles.Admin)
    {
        todayDate = DateTime.Today;
    }
</div>
<div style="width: 100%">
    @RenderBody()
</div>

@RenderSection("Scripts", required: false)
