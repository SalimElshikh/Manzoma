@using ElecWarSystem.Models
@{
    ViewBag.Title = "Capms";
    Layout = "~/Views/Shared/tmam_gathering_layout.cshtml";
    Dictionary<String, Dictionary<String, List<Camp>>> Camps = ViewBag.Camps;
    int i = 1;
}

<h1 class="title-of-page">
    الضباط و الأفراد المتواجدين خارج التمركز لوحدات الحرب الإلكترونیة
</h1>
@if (Camps.Count > 0)
{
    foreach (var CampZone in Camps)
    {
        <div class="col-lg-3 col-md-3"></div>
        <p class="col-lg-6 col-md-6" id="zone-text">@String.Format($"وحدات فى نطاق {CampZone.Key}") </p>

        <table class="table table-bordered table-review">
            <tr class="table-review-baseeLine">
                <th>م</th>
                <th>الوحدة</th>
                <th>الرتبة / الدرجة</th>
                <th>الإسم </th>
                <th>مكان التمركز الحالى</th>
                <th>السبب</th>
                <th>المدة من</th>
                <th>المدة إلى</th>
            </tr>
            <tbody>
                @foreach (var CampUnit in CampZone.Value)
                {
                    int j = 0;
                    string padding = $"{Math.Round((37.5 * CampUnit.Value.Count) / 2) - 15}px";
                    foreach (var Camp in CampUnit.Value)
                    {
                        <tr>
                            <td class="aribiano">@(i++)</td>
                            @if (j == 0)
                            {
                                <td class="aribiano" rowspan="@CampUnit.Value.Count" style="font-weight:bold; padding-top:@padding;">
                                    @CampUnit.Key
                                </td>
                            }
                            <td>@Camp.CampDetail.Person.Rank.RankName</td>
                            <td>@Camp.CampDetail.Person.FullName</td>
                            <td class="aribiano">@Camp.CampDetail.CurrentExistance</td>
                            <td class="aribiano">@Camp.CampDetail.Reason</td>
                            <td class="aribiano">@Camp.CampDetail.DateFrom.ToString("dd-MM-yyyy")</td>
                            <td class="aribiano">@Camp.CampDetail.DateTo.ToString("dd-MM-yyyy")</td>
                        </tr>
                        j++;
                    }

                }
            </tbody>
        </table>
    }
    <div class="col-lg-3 col-md-3">
        @Html.ActionLink("Export as a Pdf", actionName: "CampsReport", controllerName: "TmamGatheringReports", routeValues: null, htmlAttributes: new { @class = "btn btn-primary btn-block" });
    </div>
}
else
{
    <div class="col-lg-3 col-md-3"></div>
    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
        <h2 style="text-align:center">لم يوجد ضباط أو أفراد خارج التمركز حتى الآن !!</h2>
        <img src="~/Images/page.png" />
    </div>
}