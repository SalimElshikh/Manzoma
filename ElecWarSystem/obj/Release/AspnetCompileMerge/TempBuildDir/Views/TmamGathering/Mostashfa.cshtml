@using ElecWarSystem.Models
@{
    ViewBag.Title = "Mostashfa";
    Layout = "~/Views/Shared/tmam_gathering_layout.cshtml";
    Dictionary<String, Dictionary<String, List<Mostashfa>>> AllMostashfas = ViewBag.Mostashfa;
    int i = 1;
}

<h1 class="title-of-page">
    الضباط و الأفراد المحجوزين بالمستشفيات العسكرية لوحدات الحرب الإلكترونیة
</h1>
@if (AllMostashfas.Count > 0)
{
    foreach (var MostashfarPerZone in AllMostashfas)
    {
        <div class="col-lg-3 col-md-3"></div>
        <p class="col-lg-6 col-md-6" id="zone-text">@String.Format($"وحدات فى نطاق {MostashfarPerZone.Key}") </p>

        <table class="table table-bordered table-review">
            <tr class="table-review-baseeLine">
                <th>م</th>
                <th>الوحدة</th>
                <th>الرتبة / الدرجة</th>
                <th>الإسم </th>
                <th>المستشفى</th>
                <th>تاريخ دخول المستشفى</th>
                <th>التشخيص الطبى</th>
                <th>التوصيات الممنوحة</th>
            </tr>
            <tbody>
                @foreach (var MostashfaPerUnit in MostashfarPerZone.Value)
                {
                    int j = 0;
                    string padding = $"{Math.Round((37.5 * MostashfaPerUnit.Value.Count) / 2) - 15}px";
                    foreach (var Mostashfa in MostashfaPerUnit.Value)
                    {
                        <tr>
                            <td class="aribiano">@(i++)</td>
                            @if (j == 0)
                            {
                                <td class="aribiano" rowspan="@MostashfaPerUnit.Value.Count" style="font-weight:bold; padding-top:@padding;">
                                    @MostashfaPerUnit.Key
                                </td>
                            }
                            <td>@Mostashfa.MostashfaDetails.FardDetails.Rotba.RotbaName</td>
                            <td>@Mostashfa.MostashfaDetails.FardDetails.FullName</td>
                            <td  class="aribiano">@Mostashfa.MostashfaDetails.Mostashfa</td>
                            <td  class="aribiano">@Mostashfa.MostashfaDetails.DateFrom.ToString("dd-MM-yyyy")</td>
                            <td  class="aribiano">@Mostashfa.MostashfaDetails.Hala</td>
                            <td  class="aribiano">@Mostashfa.MostashfaDetails.Tawseya</td>
                        </tr>
                        j++;
                    }

                }
            </tbody>
        </table>
    }

        @Html.ActionLink("تنزيل", actionName: "MostashfasReport", controllerName: "TmamGatheringReports", routeValues: null, htmlAttributes: new { @class = "" });

}   
else
{

    <div>
        <h2 style="text-align:center">لم يوجد عرض مستشفيات حتى الآن !!</h2>
        <img src="~/Images/page.png" />
    </div>
}

