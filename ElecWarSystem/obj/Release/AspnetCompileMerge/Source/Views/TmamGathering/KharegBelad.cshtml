@using ElecWarSystem.Models
@{
    ViewBag.Title = "KharegBelad";
    Layout = "~/Views/Shared/tmam_gathering_layout.cshtml";
    Dictionary<String, Dictionary<String, List<KharegBelad>>> outOfCountries = ViewBag.KharegBelad;
    int i = 1;
}

<h1 class="title-of-page">
    الضباط و الأفراد المسافرين خارج البلاد لوحدات الحرب الإلكترونیة
</h1>
@if (outOfCountries.Count > 0)
{
    foreach (var KharegBeladZone in outOfCountries)
    {

        <p id="zone-text">@String.Format($"وحدات فى نطاق {KharegBeladZone.Key}") </p>

        <table class="table table-bordered table-review">
            <tr class="table-review-baseeLine">
                <th>م</th>
                <th>الوحدة</th>
                <th>الرتبة / الدرجة</th>
                <th>الإسم </th>
                <th>جهة السفر</th>
                <th>الغرض من السفر</th>
                <th>المدة من</th>
                <th>المدة إلى</th>
            </tr>
            <tbody>
                @foreach (var KharegBeladUnit in KharegBeladZone.Value)
                {
                    int j = 0;
                    string padding = $"{Math.Round((37.5 * KharegBeladUnit.Value.Count) / 2) - 15}px";
                    foreach (var KharegBelad in KharegBeladUnit.Value)
                    {
                        <tr>
                            <td class="aribiano">@(i++)</td>
                            @if (j == 0)
                            {
                                <td class="aribiano" rowspan="@KharegBeladUnit.Value.Count" style="font-weight:bold; padding-top:@padding;">
                                    @KharegBeladUnit.Key
                                </td>
                            }
                            <td>@KharegBelad.KharegBeladDetails.FardDetails.Rotba.RotbaName</td>
                            <td>@KharegBelad.KharegBeladDetails.FardDetails.FullName</td>
                            <td class="aribiano">@KharegBelad.KharegBeladDetails.Balad</td>
                            <td class="aribiano">@KharegBelad.KharegBeladDetails.Sabab</td>
                            <td class="aribiano">@KharegBelad.KharegBeladDetails.DateFrom.ToString("dd-MM-yyyy")</td>
                            <td class="aribiano">@KharegBelad.KharegBeladDetails.DateTo.ToString("dd-MM-yyyy")</td>
                         </tr>
                        j++;
                    }

                }
            </tbody>
        </table>
    }

        @Html.ActionLink("تنزيل pdf ", actionName: "OutOfCountriesReport", controllerName: "TmamGatheringReports", routeValues: null, htmlAttributes: new { @class = "" });

}
else
{
    <div >
        <h2 style="text-align:center">لم يوجد ضباط أو أفراد خارج البلاد حتى الآن !!</h2>
        <img src="~/Images/page.png" />
    </div>
}