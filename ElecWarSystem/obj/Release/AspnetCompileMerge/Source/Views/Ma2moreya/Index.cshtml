<script src="~/Scripts/TmamScripts/Ma2moreya-crud.js"></script>
@using ElecWarSystem.Models
@{
    int j = 1;
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/tmam_layout.cshtml";
}
<div class="container">
    <div class="row">
        <h2>تمام المأموريات</h2>
        <p id="Ma2moreya-counter" style="margin:10px; font-size:18px;">@ViewBag.EnteredMa2moreyas / @ViewBag.TotalMa2moreyas</p>
        <div class="name-div col-lg-12 .">
            <div class="container">
                <div class="row">
                    <div class="form-group col-lg-12 .">
                        <button id="add-Ma2moreya-btn" class="export-btn" style="font-size:16px;" onclick="openMa2moreyaPopup()">
                            <span class="glyphicon glyphicon-plus"></span>
                            إضافة
                        </button>
                    </div>
                    <div class="col-lg-12 .">
                        <table class="table table-bordered" id="Ma2moreya-table">
                            <tr>
                                <th>م</th>
                                <th>الرتبة / الدرجة</th>
                                <th>الإسم </th>
                                <th>جهة المأمورية</th>
                                <th>الأمر بالمأمورية</th>
                                <th>التاريخ من</th>
                                <th>التاريخ إلى</th>
                                <th></th>
                            </tr>
                            <tbody style="font-size:14px;">
                                @foreach (Ma2moreya Ma2moreya in ViewBag.Ma2moreyasList)
                                {
                                    <tr>
                                        <td>@j</td>
                                        <td>@Ma2moreya.Ma2moreyaDetails.FardDetails.Rotba.RotbaName</td>
                                        <td>@Ma2moreya.Ma2moreyaDetails.FardDetails.FullName</td>
                                        <td>@Ma2moreya.Ma2moreyaDetails.Ma2moreyaPlace</td>
                                        <td>@Ma2moreya.Ma2moreyaDetails.Ma2moreyaCommandor</td>
                                        <td>@Ma2moreya.Ma2moreyaDetails.DateFrom.ToString("yyyy-MM-dd")</td>
                                        <td>@Ma2moreya.Ma2moreyaDetails.DateTo.ToString("yyyy-MM-dd")</td>
                                        <td>
                                            <button class="btn btn-danger" onclick="deleteMa2moreya(@Ma2moreya.ID)">
                                                حذف
                                                <span class="glyphicon glyphicon-remove"></span>
                                            </button>
                                        </td>
                                    </tr>
                                    j++;
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="popup Ma2moreya-popup">
    <div class="close-btn" onclick="closePop()">&times;</div>
    <div class="form">
        <div class="form-group" style="width: 30%; float: right;">
            @Html.Label("الرتبة/الدرجة", htmlAttributes: new { @class = "control-label" })
            @Html.DropDownList("FardDetails-Rotba", new SelectList(ViewBag.Rotbas, "ID", "RotbaName"), new { @class = "form-control", @id = "FardDetails-Rotba", @onchange = "UpdateFardDetailsComboBox()" })
        </div>
        <div class="form-group" style="width:60%; float:right; margin-right:10%">
            @Html.Label("الإسم", htmlAttributes: new { @class = "control-label" })
            <select name="FardDetails-name" class="form-control" id="FardDetails-name" onchange="disableBtn()">
                <option></option>
            </select>
        </div>
        <div class="form-group">
            @Html.Label("جهة المأمورية", htmlAttributes: new { @class = "control-label" })
            @Html.Editor("Ma2moreya-place", new { htmlAttributes = new { @class = "form-control", @id = "Ma2moreya-place", @onkeyup = "disableBtn()" } })
        </div>
        <div class="form-group">
            @Html.Label("الأمر بالمأمورية", htmlAttributes: new { @class = "control-label" })
            @Html.Editor("Ma2moreya-commandor", new { htmlAttributes = new { @class = "form-control", @id = "Ma2moreya-commandor", @onkeyup = "disableBtn()" } })
        </div>
        <div class="form-group" style="width: 45%; float: right;">
            @Html.Label("التاريخ من", htmlAttributes: new { @class = "control-label" })
            @Html.Editor("date-from", new { htmlAttributes = new { @class = "form-control", @type = "date", @id = "date-from", @onchange = "disableBtn()" } })
        </div>
        <div class="form-group" style="width:45%; float:right; margin-right:10%">
            @Html.Label("التاريخ إلى", htmlAttributes: new { @class = "control-label" })
            @Html.Editor("date-to", new { htmlAttributes = new { @class = "form-control", @type = "date", @id = "date-to", @onchange = "disableBtn()" } })
        </div>
        <div class="form-group">
            <button class="btn btn-success popup-submit-btn" disabled style="font-size:16px;" onclick="Add()">
                <span class="glyphicon glyphicon-save"></span>
                حفظ
            </button>
        </div>
    </div>
</div>