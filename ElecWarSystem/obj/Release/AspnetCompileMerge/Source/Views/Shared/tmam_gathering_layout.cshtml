@using ElecWarSystem.Models
@{
    ViewBag.Title = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
    UserRoles userRoles = (ElecWarSystem.Models.UserRoles)byte.Parse(Request.Cookies["Roles"].Value);
}
<link rel="stylesheet" href="~/Content/UnitDataEntryStyle.css" />
<link rel="stylesheet" href="~/Content/tmamGathering.css" />
<script src="~/Scripts/TmamScripts/tmam-gathering-helper.js"></script>

<div>

    <div class="container">
        <div class="row">
            @{DateTime todayDate = DateTime.Today.AddDays(1);}

            @if ((userRoles & UserRoles.Viewer) == UserRoles.Viewer &&
                (userRoles & UserRoles.Admin) != UserRoles.Admin)
            {
                todayDate = DateTime.Today;
            }
            <div class="title-div col-lg-12 col-md-12 col-sm-12 col-xs-12" style="height:150px;">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-2 col-md-2 col-sm-3 col-xs-3">
                            <img src="~/Images/elecwarIcon2.png" />
                        </div>
                        <div class="col-lg-8 col-md-8 col-sm-4 col-xs-4">
                            <p style="font-size:50px; font-weight:bold;">تمام جميع وحدات الحرب الإلكترونية</p>
                            <p class="aribiano">
                                عن يوم @todayDate.ToString("dddd الموافق yyyy/MM/dd", new System.Globalization.CultureInfo("ar-AE"))
                            </p>
                        </div>
                        <div class="col-lg-2 col-md-2 col-sm-3 col-xs-3">
                            <img src="~/Images/elecwarIcon2.png" />
                        </div>
                    </div>
                </div>
            </div>

            <nav aria-label="Page navigation">
                <ul class="pagination" style="font-size:18px;">
                    <li>
                        @Html.ActionLink("خارج التمركز", "Camps", "TmamGathering")
                    </li>
                    <li>
                        @Html.ActionLink("خارج البلاد", "OutOfCountry", "TmamGathering")
                    </li>
                    <li>
                        @Html.ActionLink("غياب", "Absence", "TmamGathering")
                    </li>
                    <li>
                        @Html.ActionLink("سجن", "Prison", "TmamGathering")
                    </li>
                    <li>
                        @Html.ActionLink("المستشفى", "Hospital", "TmamGathering")
                    </li>
                    <li>
                        @Html.ActionLink("الفرقة", "Courses", "TmamGathering")
                    </li>
                    <li>
                        @Html.ActionLink("أجازة مرضية", "SickLeaves", "TmamGathering")
                    </li>
                    <li>
                        @Html.ActionLink("المأموريات", "Errands", "TmamGathering")
                    </li>
                    <li>
                        @Html.ActionLink("تمام الدرجات الأخرى", "NonOfficers", "TmamGathering")
                    </li>
                    <li>
                        @Html.ActionLink("تمام الضباط", "Officers", "TmamGathering")
                    </li>
                    <li>
                        @Html.ActionLink("تمام القادة", "LeaderShip", "TmamGathering")
                    </li>
                    @if ((userRoles & UserRoles.Analyzer) == UserRoles.Analyzer)
                    {
                        <li>
                            @Html.ActionLink("إستلام التمامات", "RecievedTmam", "TmamGathering")
                        </li>
                    }
                </ul>
            </nav>
            @RenderBody()
        </div>
    </div>

</div>