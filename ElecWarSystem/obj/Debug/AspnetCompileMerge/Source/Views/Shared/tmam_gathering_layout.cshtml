                <p style="font-size:50px; font-weight:bold;">تمام جميع وحدات الحرب الإلكترونية</p>
                <p>
                    عن يوم @todayDate.ToString("dddd الموافق dd-MM-yyyy", new System.Globalization.CultureInfo("ar-AE"))
                </p>
            </div>
            <nav aria-label="Page navigation">
                <ul class="pagination" style="font-size:18px;">
                    <li>
                        @Html.ActionLink("غياب", "Absence", "TmamGathering")
                    </li>
                    <li>
                        @Html.ActionLink("سجن", "Prison", "TmamGathering")
                    </li>
                    <li>
                        @Html.ActionLink("المأموريات", "Errands", "TmamGathering")
                    </li>
                    <li>
                        @Html.ActionLink("أجازة مرضية", "SickLeaves", "TmamGathering")
                    </li>
                    <li>
                        @Html.ActionLink("المستشفى", "Hospital", "TmamGathering")
                    </li>
                    <li>
                        @Html.ActionLink("تمام الدرجات الأخرى", "NonOfficers", "TmamGathering")
                    </li>
                    <li>
                        @Html.ActionLink("تمام الضباط", "Officers", "TmamGathering")
                    </li>
                    <li>
                        @Html.ActionLink("تمام القادة", "Index", "LeaderShip")
                    </li>
                    <li>
                        @Html.ActionLink("إستلام التمامات", "RecievedTmam", "TmamGathering")
                    </li>
                </ul>
            </nav>
            @RenderBody()
        </div>
    </div>

</div>