@using ElecWarSystem.Models
@{
    ViewBag.Title = "RecievedTmam";
    Layout = "~/Views/Shared/tmam_gathering_layout.cshtml";
    int i = 0;
}
<div class="container">
    <div class="row">
        @if (ViewBag.SubmittedTmams.Count > 0)
        {
            <div class="col-lg-2 col-md-2"></div>
            <div class="col-lg-8 col-md-8 col-sm-12 col-xs-12">
                <h2 style="text-align:center">تمام الإستلام</h2>
                <table class="table table-bordered table-hover" style="background-color:blanchedalmond">
                    <tr style="background-color:burlywood">
                        <th>م</th>
                        <th>الوحدة</th>
                        <th>تم الإستلام</th>

                    </tr>
                    @foreach (Tmam tmam in ViewBag.SubmittedTmams)
                    {
                        <tr onclick="GetTmamDetail(@tmam.UnitID)">
                            <td>
                                @(++i)
                            </td>
                            <td>
                                @tmam.Unit.UnitName
                            </td>
                            <td>
                                @if (tmam.Recieved)
                                {
                                    <span class="glyphicon glyphicon-check" style="color:darkgreen;"></span>
                                }
                            </td>
                        </tr>
                    }
                </table>
            </div>
        }
        else
        {
            <div class="col-lg-3 col-md-3"></div>
            <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                <h2 style="text-align:center">لم يتم إرسال أى تمامات حتى الآن !!</h2>
                <img src="~/Images/page.png"/>
            </div>
        }
    </div>
</div>