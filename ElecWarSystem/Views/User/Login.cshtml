@{
    Layout = null;
}

<!DOCTYPE html>

<html dir="rtl" lang="ar-eg">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>تسجيل دخول</title>
    <link rel="icon" type="image/x-icon" href="~/4500.ico" />
    <link rel="stylesheet" href="~/Content/bootstrap.css" />
    <link rel="stylesheet" href="~/Content/Login.css" />
</head>
<body>
    <div class="d-flex justify-content-center align-items-center bg">
        <!--form Start-->
        <form method="post" class="form-container">
            <h1>منظومة الحرب الإلكترونية</h1>
            <div class="form-group">
                @Html.Label("إسم المستخدم", htmlAttributes: new { @class = "control-label" })
                @Html.Editor("username", new { htmlAttributes = new { @class = "form-control", @placeholder = "إسم المستخدم" } })
                @Html.ValidationMessage("username", "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.Label("كلمة السر", htmlAttributes: new { @class = "control-label" })
                @Html.Editor("password", new { htmlAttributes = new { @class = "form-control", @type = "password", @placeholder = "كلمة السر" } })
                @Html.ValidationMessage("password", "", new { @class = "text-danger" })
            </div>

            <button type="submit" class="export-btn" autocomplete="off">
                تسجيل دخول
            </button>

        </form>
        <!--form End-->
    </div>
</body>
</html>
