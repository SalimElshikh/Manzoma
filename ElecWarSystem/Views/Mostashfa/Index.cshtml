@using ElecWarSystem.Models
<script src="~/Scripts/TmamScripts/Mostashfa-crud.js"></script>
@{
    int j;
ViewBag.Title = "Index";
Layout = "~/Views/Shared/tmam_layout.cshtml";
}

<h2>الضباط و الأفراد المحجوزين بالمستشفيات العسكرية</h2>
<p id="Mostashfa-counter" style="margin:10px; font-size:18px;">@ViewBag.MostashfaEntered / @ViewBag.MostashfaTotal</p>
<div class="name-div col-lg-12 .">
    <div class="container">
        <div class="row">
            <div class="form-group col-lg-12 .">
                <button id="add-Mostashfa-btn" class="export-btn" style="font-size:16px;" onclick="openMostashfaPopup()">
                    <span class="glyphicon glyphicon-plus"></span>
                    إضافة
                </button>
            </div>
            <div class="col-lg-12 .">
                <table class="table table-bordered" id="Mostashfa-table">
                    <tr>
                        <th>م</th>
                        <th>الرتبة / الدرجة</th>
                        <th>الإسم </th>
                        <th>المستشفى</th>
                        <th>تاريخ دخول المستشفى</th>
                        <th>التشخيص الطبى</th>
                        <th>التوصيات الممنوحة</th>
                        <th></th>
                    </tr>
                    @{
                        j = 1;
                    }
                    <tbody style="font-size:14px;">
                        @foreach (Mostashfa Mostashfa in ViewBag.Mostashfa)
                        {
                            <tr>
                                <td>@j</td>
                                <td>@Mostashfa.MostashfaDetails.FardDetails.Rotba.RotbaName</td>
                                <td>@Mostashfa.MostashfaDetails.FardDetails.FullName</td>
                                <td>@Mostashfa.MostashfaDetails.Mostashfa</td>
                                <td>@Mostashfa.MostashfaDetails.DateFrom.ToString("yyyy-MM-dd")</td>
                                <td>@Mostashfa.MostashfaDetails.Hala</td>
                                <td>@Mostashfa.MostashfaDetails.Tawseya</td>
                                <td>
                                    <button class="btn btn-danger timeout-btn" onclick="deleteMostashfa(@Mostashfa.ID)">
                                        حذف
                                        <span class="glyphicon glyphicon-remove"></span>
                                    </button>
                                </td>
                            </tr>
                            j++;
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


<div class="popup Mostashfa-popup">
    <div class="close-btn" onclick="closePop()">&times;</div>
    <div class="form">
        <div class="form-group" style="width: 30%; float: right;">
            @Html.Label("الرتبة/الدرجة", htmlAttributes: new { @class = "control-label" })
            @Html.DropDownList("FardDetails-Rotba", new SelectList(ViewBag.Rotbas, "ID", "RotbaName"), new { @class = "form-control", @id = "FardDetails-Rotba", @onchange = "UpdateFardDetailsComboBox()" })
        </div>
        <div class="form-group" style="width:60%; float:right; margin-right:10%">
            @Html.Label("الإسم", htmlAttributes: new { @class = "control-label" })
            <select name="FardDetails-name" class="form-control" id="FardDetails-name" onchange="disableBtn()">
                <option></option>
            </select>
        </div>
        <div class="form-group" style="width: 45%; float: right;">
            @Html.Label("إسم المستشفى", htmlAttributes: new { @class = "control-label" })
            @Html.Editor("Mostashfa-name", new { htmlAttributes = new { @class = "form-control", @id = "Mostashfa-name", @onkeyup = "disableBtn()" } })
        </div>
        <div class="form-group" style="width:45%; float:right; margin-right:10%">
            @Html.Label("تاريخ دخول المستشفى", htmlAttributes: new { @class = "control-label" })
            @Html.Editor("Mostashfa-date", new { htmlAttributes = new { @class = "form-control", @type = "date", @id = "Mostashfa-date", @onchange = "disableBtn()" } })
        </div>
        <div class="form-group">
            @Html.Label("التشحيص الطبى", htmlAttributes: new { @class = "control-label" })
            @Html.Editor("diagnosis", new { htmlAttributes = new { @class = "form-control", @id = "diagnosis", @onkeyup = "disableBtn()" } })
        </div>
        <div class="form-group">
            @Html.Label("التوصيات الممنوحة", htmlAttributes: new { @class = "control-label" })
            @Html.Editor("recommendations", new { htmlAttributes = new { @class = "form-control", @id = "recommendations", @onkeyup = "disableBtn()" } })
        </div> 
        <div class="form-group">
            <button class="export-btn popup-submit-btn" disabled style="font-size:16px;" onclick="Add()">
                <span class="glyphicon glyphicon-save"></span>
                حفظ
            </button>
        </div>
    </div>
</div>
