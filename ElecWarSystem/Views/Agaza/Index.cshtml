
@{
    int j;
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/tmam_layout.cshtml";
}
@using ElecWarSystem.Models
<h2>الأجازات</h2>
<p id="Agaza-counter" style="margin:10px; font-size:18px;">@ViewBag.AgazaEntered / @ViewBag.AgazaTotal</p>
<div class="name-div col-lg-12 .">
    <div class="container">
        <div class="row">
            <div class="form-group col-lg-12 .">
                <button id="add-Agaza-btn" class="export-btn" style="font-size:16px;" onclick="openAgazaPopup()">
                    <span class="glyphicon glyphicon-plus"></span>
                    إضافة
                </button>
            </div>
            <div class="col-lg-12 .">
                <table class="table table-bordered" id="Agazas-table">
                    <tr>
                        <th>م</th>
                        <th>الرتبة / الدرجة</th>
                        <th>الإسم </th>
                        <th>نوع الأجازة</th>
                        <th>بدء الأجازة</th>
                        <th>عودة الأجازة</th>
                        <th></th>
                    </tr>
                    @{
                        j = 1;
                    }
                    <tbody style="font-size:14px;">
                        @foreach (Agaza Agaza in ViewBag.Agaza)
                        {
                            <tr>
                                <td>@j</td>
                                <td>@Agaza.AgazaDetails.FardDetails.Rotba.RotbaName</td>
                                <td>@Agaza.AgazaDetails.FardDetails.FullName</td>
                                <td>@Agaza.AgazaDetails.AgazaType</td>
                                <td>@Agaza.AgazaDetails.DateFrom.ToString("yyyy-MM-dd")</td>
                                <td>@Agaza.AgazaDetails.DateTo.ToString("yyyy-MM-dd")</td>
                                <td>
                                    <button class="btn btn-danger timeout-btn" onclick="deleteAgaza(@Agaza.ID)">
                                        حذف
                                        <span class="glyphicon glyphicon-remove"></span>
                                    </button>
                                </td>
                            </tr>
                            j++;
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


<div class="popup Agaza-popup">
    <div class="close-btn" onclick="closePop()">&times;</div>
    <div class="form">
        <div class="form-group">
            @Html.Label("الرتبة/الدرجة", htmlAttributes: new { @class = "control-label" })
            @Html.DropDownList("FardDetails-Rotba", new SelectList(ViewBag.Rotbas, "ID", "RotbaName"), new { @class = "form-control", @id = "FardDetails-Rotba", @onchange = "UpdateFardDetailsComboBox()" })
        </div>
        <div class="form-group">
            @Html.Label("الإسم", htmlAttributes: new { @class = "control-label" })
            <select name="FardDetails-name" class="form-control" id="FardDetails-name" onchange="disableBtn()">
                <option></option>
            </select>
        </div>
        <div class="form-group">
            @Html.Label("نوع الأجازة", htmlAttributes: new { @class = "control-label" })
            <select name="Agaza-type" class="form-control" id="Agaza-type" onchange="disableBtn()">
                <option></option>
                <option>عارضة</option>
                <option>بدل راحة</option>
                <option>راحة</option>
                <option>ميدانية</option>
                <option>سنوية</option>
            </select>
        </div>
        <div class="form-group">
            @Html.Label("تاريخ بدء الأجازة", htmlAttributes: new { @class = "control-label" })
            @Html.Editor("date-from", new { htmlAttributes = new { @class = "form-control", @type = "date", @id = "date-from", @onchange = "disableBtn()" } })
        </div>
        <div class="form-group">
            @Html.Label("تاريخ عودة الأجازة", htmlAttributes: new { @class = "control-label" })
            @Html.Editor("date-to", new { htmlAttributes = new { @class = "form-control", @type = "date", @id = "date-to", @onchange = "disableBtn()" } })
        </div>
        <div class="form-group">
            <button class="btn btn-success popup-submit-btn" disabled style="font-size:16px;" onclick="Add()">
                <span class="glyphicon glyphicon-save"></span>
                حفظ
            </button>
        </div>
    </div>
</div>


